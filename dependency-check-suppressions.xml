<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">

    <!-- Suppress false positives for Spring Framework -->
    <suppress>
        <notes><![CDATA[
        False positive for Spring Framework components
        ]]></notes>
        <gav regex="true">^org\.springframework:spring-.*:.*$</gav>
        <cpe>cpe:/a:springsource:spring_framework</cpe>
    </suppress>

    <!-- Suppress false positives for common logging libraries -->
    <suppress>
        <notes><![CDATA[
        False positive for common logging libraries
        ]]></notes>
        <gav regex="true">^org\.slf4j:.*:.*$</gav>
        <cpe>cpe:/a:slf4j:slf4j</cpe>
    </suppress>

    <!-- Suppress false positives for Mockito -->
    <suppress>
        <notes><![CDATA[
        False positive for Mockito testing framework
        ]]></notes>
        <gav regex="true">^org\.mockito:.*:.*$</gav>
        <cpe>cpe:/a:mockito:mockito</cpe>
    </suppress>

    <!-- Suppress false positives for Apache Commons -->
    <suppress>
        <notes><![CDATA[
        False positive for Apache Commons Lang
        ]]></notes>
        <gav regex="true">^org\.apache\.commons:commons-lang3:.*$</gav>
        <cpe>cpe:/a:apache:commons</cpe>
    </suppress>

    <!-- Suppress false positives for Swagger/OpenAPI -->
    <suppress>
        <notes><![CDATA[
        False positive for SpringDoc OpenAPI
        ]]></notes>
        <gav regex="true">^org\.springdoc:springdoc-openapi-.*:.*$</gav>
        <cpe>cpe:/a:openapi:openapi</cpe>
    </suppress>

    <!-- Suppress specific false positives that might appear -->
    <suppress>
        <notes><![CDATA[
        False positive for Jackson databind
        ]]></notes>
        <gav regex="true">^com\.fasterxml\.jackson\.core:jackson-databind:.*$</gav>
        <cve>CVE-2023-35116</cve>
    </suppress>

</suppressions>